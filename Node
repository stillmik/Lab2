package Siaod2;

public class Node {
    private String word;
    private int value;
    public Node next;

    public Node(String word){
        word = word.trim();
        this.word = word;
        int value = 0;
        for(int i = 0; i < word.length(); i++){
            value = value +word.charAt(i);
        }
        this.value = value;
    }

    String getWord() {
        return word;
    }

    public void setWord(String word) {
        this.word = word;
    }

    int getValue() {
        return value;
    }

    public void setValue(int value) {
        this.value = value;
    }
}
